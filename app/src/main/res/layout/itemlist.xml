<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="16dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/title_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Judul List View" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/time_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_action_time"
                android:gravity="center_vertical"
                android:text="10:00 AM" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/date_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_action_date"
                android:gravity="center_vertical"
                android:text="11 Desember 2017"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/time_list"
                />
            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@id/date_list"/>
        </RelativeLayout>




    </LinearLayout>

</android.support.v7.widget.CardView>